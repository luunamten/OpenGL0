#version 440 core

layout(location = 0) in vec4 vt_Coord;
layout(location = 1) in vec3 vt_Normal;
layout(location = 3) in vec3 vt_Color;

out vec3 fr_Normal;
out vec3 fr_Color;

uniform mat4 u_TransformMat;
uniform mat4 u_RotationMat;

void main() {
	fr_Normal = (u_RotationMat * vec4(vt_Normal, 1.0)).xyz;
	fr_Color = vt_Color;
	gl_Position = u_TransformMat * vt_Coord;
}